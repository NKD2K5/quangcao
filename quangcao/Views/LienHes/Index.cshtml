@model IEnumerable<quangcao.Models.LienHe>

@{
    ViewData["Title"] = "Contacts";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="~/css/lienheindex.css" rel="stylesheet" />
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Danh sách liên hệ</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Thêm liên hệ
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark mb-1"><i class="bi bi-person-fill"></i> @item.HoTen</h5>
                        <p class="mb-1"><strong>Điện thoại:</strong> @item.SoDienThoai</p>
                        <p class="mb-1"><strong>Email:</strong> @item.Email</p>
                        <p class="mb-1"><strong>Tiêu đề:</strong> @item.TieuDe</p>
                        <p class="text-muted mb-2" style="max-height: 4.5em; overflow: hidden; text-overflow: ellipsis;">
                            <strong>Nội dung:</strong> @item.NoiDung
                        </p>
                        <p class="small text-muted mb-2">
                            <i class="bi bi-clock"></i> @item.ThoiGian.ToString("dd/MM/yyyy HH:mm")
                        </p>

                        <div class="mt-auto d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.IdLienHe" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-info-circle"></i> Chi tiết
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.IdLienHe" class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdLienHe" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc chắn muốn xoá liên hệ này?');">
                                <i class="bi bi-trash"></i> Xoá
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
