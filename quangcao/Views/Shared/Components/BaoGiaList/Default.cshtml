@model List<quangcao.Models.BaoGia>

<div class="baogia-page">
    <ul class="baogia-list-group">
        @foreach (var baoGia in Model)
        {
            <li class="baogia-list-group-item">
                <a asp-action="Details" asp-controller="BaoGia" asp-route-id="@baoGia.IdBaoGia">
                    <span class="baogia-title">@baoGia.TieuDe</span>
                </a>
            </li>
        }
    </ul>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Thêm hiệu ứng hover cho các mục báo giá
        const listItems = document.querySelectorAll('.baogia-list-group-item');
        
        listItems.forEach(item => {
            const link = item.querySelector('a');
            
            // Thêm hiệu ứng hover
            item.addEventListener('mouseenter', () => {
                link.style.transform = 'translateX(8px)';
            });
            
            item.addEventListener('mouseleave', () => {
                link.style.transform = 'translateX(0)';
            });
            
            // Thêm hiệu ứng click
            link.addEventListener('click', (e) => {
                e.target.style.transform = 'scale(0.98)';
                setTimeout(() => {
                    e.target.style.transform = 'scale(1)';
                }, 100);
            });
        });
    });
</script>
