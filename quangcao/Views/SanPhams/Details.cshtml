    <script>
        function openLightbox() {
            document.getElementById('imageLightbox').style.display = 'flex';
            const mainVideo = document.getElementById('mainImage');
            const lightboxVideo = document.getElementById('lightboxVideo');
            
            // Nếu là video, copy thời gian hiện tại sang lightbox video
            if (mainVideo && mainVideo.tagName === 'VIDEO' && lightboxVideo) {
                lightboxVideo.currentTime = mainVideo.currentTime;
                if (!mainVideo.paused) {
                    lightboxVideo.play();
                }
            }
        }

        function closeLightbox() {
            document.getElementById('imageLightbox').style.display = 'none';
            const lightboxVideo = document.getElementById('lightboxVideo');
            if (lightboxVideo) {
                lightboxVideo.pause();
            }
        }

        // Đóng lightbox khi click ra ngoài
        document.getElementById('imageLightbox').addEventListener('click', function(e) {
            if (e.target === this) {
                closeLightbox();
            }
        });
    </script>
}

